{
  "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",
  "ts-node": {
    // It is faster to skip typechecking.
    // Remove if you want ts-node to do typechecking.
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {}
  },
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitReturns": false,
    "module": "commonjs",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@pool": [
        "./src/db/pool.ts"
      ],
      "@config": [
        "./src/config.ts"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}